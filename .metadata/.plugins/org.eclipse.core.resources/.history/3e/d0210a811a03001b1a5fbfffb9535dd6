package repeticao;

import javax.swing.JOptionPane;

public class ExemploDo {

	public static void main(String[] args) {
		do {
			int valor1 = Integer.parseInt(JOptionPane.showInputDialog("Valor 1"));
			int valor2 = Integer.parseInt(JOptionPane.showInputDialog("Valor 2"));
			char opcao = JOptionPane.showInputDialog("Digite o operador aritmético").charAt(0);
			if (opcao=='+') {
			System.out.println("Soma: " + (valor1+valor2));
			}else if (opcao=='-') {
			System.out.println("Subtracao: " + (valor1-valor2));
			}else if (opcao=='*') {
			System.out.println("Multiplicacao: " + (valor1*valor2));
			}else if (opcao=='/') {
			System.out.println("Divisão: " + (valor1/valor2));
			}else {
			System.out.println("Operação não reconhecida!");
			}
			char resposta = JOptionPane.showInputDialog("Digite <S> para continuar").charAt(0);
			}while();