package variaveis;

import javax.swing.JOptionPane;

public class AreaTrianguloCirculo {

	public static void main(String[] args) {
		int Raio;
		double circ;
		double area;
		double pi = 3.14;

		int Raio = Integer.parseInt(JOptionPane.showInputDialog("Digite a Raio:"));
		//int altura = Integer.parseInt(JOptionPane.showInputDialog("Digite a Altura:"));
		
		circ = 2*pi*Raio;
		
		System.out.printf("Comprimento da Circunferência:%d", circ);
		
		area = pi*Raio*Raio;
		System.out.printf("Área da Circuferência:%d", area);
	}

}
