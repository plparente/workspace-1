package br.com.universidade.modelo;

/*
 * Design Patterns ( Melhores Praticas para proojetos com 00)
 * DTO ( Data Transfer Object ) melhores praticas para os modelos
 * 1º sugestão TODOS os atributos devem ser privados
 * 2º sugestão Cada atributo deve ter o seu metodo getter(output) e setter(input)
 * 
 */

public class Aluno {

		private int rm;
		private String nome;
		private String email;
		
		public void preencherRm(int prm) {
			rm = prm;
		}
		public void preencherNome(String pnome) {
			nome = pnome;
		}
		public void preencherEmail(String pemail) {
			email = pemail;
		}
		
		public int exibirRm() {
			return rm;
		}
		public String exibirNome() {
			return nome;
		}
		public String exibirEmail() {
			return email;
		}
	}


