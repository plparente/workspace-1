package repeticao;

import javax.swing.JOptionPane;

public class ExemploDo {

	public static void main(String[] args) {
		int valor1 = Integer.parseInt(JOptionPane.showInputDialog("Valor1: "));
		int valor2 = Integer.parseInt(JOptionPane.showInputDialog("Valor2: "));
		char opcao = JOptionPane.showInputDialog("Digite o operador aritimetico").charAt(0);
		if (opcao=='+') {
			System.out.println("Soma: " + (valor1+valor2));
		
		} else if (opcao == '-') {
			System.out.println("Substracao: " + (valor1+valor2));
		}
		else if (opcao == '*') {
			System.out.println("Multiplicacao: " + (valor1+valor2));
		}
		else if (opcao == '/') {
			System.out.println("Divisao: " + (valor1+valor2));
		}
		else {
			System.out.println("Operação não reconhecida ");
		}
	}

}
