package br.com.universidade.modelo;

/*
 * Design Patterns ( Melhores Praticas para proojetos com 00)
 * DTO ( Data Transfer Object ) melhores praticas para os modelos ( Beans / JavaBeans / TO /)
 * 	ex o nome do projeto poderia ser chamadno de br.com.universidade.TO ou  br.com.universidade.beans
 * 1º sugestão TODOS os atributos devem ser privados
 * 2º sugestão Cada atributo deve ter o seu metodo getter(output) e setter(input)
 * 
 */

public class Aluno {

		private int rm;
		private String nome;
		private String email;
		
		public String getAll() {
			return rm + nome + email;
			
		}
		
		public void setAll(int p1, String p2, String p3) {
			rm = p1;
			nome = p2;
			email = p3;
			
		}
		
		public int getRm() {
			return rm;
		}
		public void setRm(int rm) {
			this.rm = rm;
		}
		public String getNome() {
			return nome;
		}
		public void setNome(String nome) {
			this.nome = nome;
		}
		public String getEmail() {
			return email;
		}
		public void setEmail(String email) {
			this.email = email;
		}
		
		
		
	}


